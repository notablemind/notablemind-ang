extends bootstrap

block headtitle
  title Home | A Notable Mind

append css
  link(href="/css/home.css", rel="stylesheet", media="screen")
  link(href="/css/thought.css", rel="stylesheet", media="screen")
  link(href="/css/page.css", rel="stylesheet", media="screen")
  link(href="/css/build.css", rel="stylesheet", media="screen")

block bodytitle
  span Take You Some Notes!

block container
    #pages.row-fluid(ng-view)
    .templates
      script(id='noteList.html', type='text/ng-template')
        .note(ng-repeat="child in note.children", data-note="child")
      script(id="settings.html", type="text/ng-template").
        Nothing to see here.

append endjs
  script.
    var TEMPLATES = [
        '/static/tpl/',
        'note',
        'thought',
        'note-text',
        'note-rich',
        'text',
        'input-editable',
        'iconinput',
        'discussion',
        'timeviewer',
        'dateviewer'
    ];
    var URLS = {
      'ajax-profile-login': "{% url 'ajax-profile-login' %}",
      'ajax-profile-register': "{% url 'ajax-profile-register' %}"
    };
  script(src="/js/build.js")
  script.
    var nm = require('notablemind');

